{
  "dataset_reader": {
    "type": "seq2seq",
    "source_tokenizer": {
      "type": "just_spaces"
    },
    "target_tokenizer": {
      "type": "just_spaces"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "data/train.csv",
  "validation_data_path": "data/dev.csv",
  "test_data_path": "data/test.csv",
  "model": {
    "type": "simple_seq2seq",
    "max_decoding_steps": 100,
    "use_bleu": false,
    "beam_size": 10,
    "attention": {
      "type": "bilinear",
      "vector_dim": 128,
      "matrix_dim": 128
    },
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "vocab_namespace": "source_tokens",
          "embedding_dim": 16,
          "trainable": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 16,
      "hidden_size": 64,
      "bidirectional": true,
      "num_layers": 1,
      "dropout": 0.1
    },
    "target_namespace": "target_tokens"
  },
  "data_loader": {
    "batch_size": 50
  },
  "trainer": {
    "cuda_device": -1,
    "num_epochs": 30,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 5
    },
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "patience": 10
  }
}
